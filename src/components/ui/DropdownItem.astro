---
import type { HTMLAttributes, CSSProperty } from 'astro/types'

interface Props extends HTMLAttributes<'button'> {
  class?: string
  style?: CSSProperty
}

const {
  style,
  ...attrs
} = Astro.props
---

<button 
  class="astroui-dropdown-item"
  class:list={[
    attrs.class,
  ]}
  {...attrs}
  >
  <slot />
</button>

<style is:global>

  .astroui-dropdown-item {
    @apply px-4 py-2 w-full flex relative items-center justify-between transition-all duration-200 hover:bg-gray-50 dark:hover:bg-gray-900 ring-2 ring-transparent focus:outline-none focus:hover:z-[1] focus:z-[1] focus:ring-primary dark:focus:ring-gray-400 active:z-[1];
  }

</style>