---
interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const { title, description, image, canonicalUrl, type, publishedTime } = Astro.props;
---

<title>{title || 'Astro UI'}</title>
<meta name='description' content={description} />
{ publishedTime && (<meta property='article:published_time' content={publishedTime} />) }
<link rel='canonical' href={canonicalUrl || 'https://astro-ui-three.vercel.app'} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:url' content={canonicalUrl || 'https://astro-ui-three.vercel.app'} />
<meta property='og:image' content={image || 'blob:https://vercel.com/14a4b35c-351c-4cbe-bed3-0e8f4d2a3050'} />
<meta property='og:type' content={type || 'website'} />
<meta name='twitter:card' content='summary_large_image' />
<meta name='twitter:title' content={title} />
<meta property='twitter:description' content={description} />
<meta name='twitter:image' content={image || 'blob:https://vercel.com/14a4b35c-351c-4cbe-bed3-0e8f4d2a3050'} />