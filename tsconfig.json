{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/styles/*"],
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
  
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "**/*.ts",
    "**/env.d.ts",
    "**/*.astro",
    "./src/**/*.ts",
  ]
}